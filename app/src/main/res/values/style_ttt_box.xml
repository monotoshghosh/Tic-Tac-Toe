<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cust_box_CARD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="cardElevation">4dp</item>            <!--    ********    -->
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="cust_box_BUTTON">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/ttt_box</item>
        <item name="backgroundTint">@null</item>   <!--    ********    -->
        <item name="android:onClick">check</item>
        <item name="android:textSize">60dp</item>
    </style>

</resources>